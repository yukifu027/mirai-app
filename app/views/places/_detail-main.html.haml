.detail-main
  .contents
    .contents__title
      = @place.name
    = image_tag "/#{@place.image}", alt: "場所写真", class: "contents__image"
    .contents__explain
      = @place.content
    .contents__info
      基本情報
    .contents__URL
      URL : #{@place.webpage}
    .contents__comment
      .items
        .title
          コメント
        = link_to new_place_comment_path(@place.id), class: "edit-btn" do
          コメントをする
      .messages
        - @comments.each do |comment|
          .message
            .message__user-name
              = current_user.name
            .message__content
              = comment.text